#include "uart.h"
#include <pthread.h>
#include <stdio.h>

Uart::Uart(const char* uart)
{
	Open(uart);
}

Uart::~Uart()
{
	close(fd);
}

int Uart::Open(const char* uart)
{
	fd = open(uart, O_RDWR|O_NOCTTY);
	if(fd < 0)
		printf("open %s failed\n", uart);

	return fd;
}

